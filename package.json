{
  "name": "vuepress-theme-hope-root",
  "private": true,
  "description": "A vuepress theme with tons of features",
  "workspaces": [
    "demo/*",
    "docs/*",
    "packages/*"
  ],
  "scripts": {
    "build": "cross-env mode=production pnpm run --stream -r build",
    "changelog": "conventional-changelog -p angular -i CHANGELOG.md -s",
    "clean": "pnpm run --stream -r clean",
    "commit": "pnpm git-cz",
    "dev": "concurrently \"tsc -b tsconfig.build.json --watch\" \"pnpm run dev:copy\"",
    "dev:copy": "pnpm run --parallel -r dev:copy",
    "docs:vite-build": "pnpm run --parallel -r docs:vite-build",
    "docs:webpack-build": "pnpm run --parallel -r docs:vite-build",
    "postinstall": "husky install",
    "lint": "pnpm run lint:prettier --write && pnpm run lint:eslint --fix && pnpm run lint:style --fix",
    "lint:check": "pnpm run lint:prettier && pnpm run lint:eslint && pnpm run lint:style",
    "lint:eslint": "eslint . --ext .js,.ts,.vue",
    "lint:md": "pnpm run lint:md-lint && pnpm run lint:md-remark && pnpm run lint:md-textlint",
    "lint:md-lint": "markdownlint **/*.md",
    "lint:md-remark": "remark --quiet .",
    "lint:md-textlint": "textlint ./docs/**/*.md",
    "lint:prettier": "prettier --check .",
    "lint:style": "stylelint packages/*/src/**/*.scss",
    "packages:bootstrap": "ts-node -O {\\\"module\\\":\\\"commonjs\\\"} scripts/bootstrap.ts",
    "packages:check-update": "ncu --deep --timeout 600000",
    "packages:update": "pnpm update",
    "release": "ts-node -O {\\\"module\\\":\\\"commonjs\\\"} scripts/release",
    "test": "node --no-compilation-cache --expose-gc node_modules/jest/bin/jest -i"
  },
  "lint-staged": {
    "*.vue": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{js,ts}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{md,json,yml}": [
      "prettier --write"
    ],
    "package.json": [
      "sort-package-json"
    ]
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  },
  "remarkConfig": {
    "plugins": [
      "frontmatter",
      [
        "footnotes",
        {
          "inlineNotes": true
        }
      ],
      "gfm",
      "math",
      "preset-lint-consistent",
      "preset-lint-recommended",
      "preset-lint-markdown-style-guide",
      [
        "lint-maximum-line-length",
        false
      ],
      [
        "lint-list-item-spacing",
        false
      ],
      [
        "lint-list-item-indent",
        "space"
      ],
      [
        "lint-emphasis-marker",
        false
      ]
    ]
  },
  "resolutions": {
    "minimist": "^1.2.6"
  },
  "devDependencies": {
    "@babel/core": "7.17.9",
    "@babel/plugin-transform-modules-commonjs": "7.17.9",
    "@babel/preset-env": "7.16.11",
    "@commitlint/cli": "16.2.3",
    "@commitlint/config-conventional": "16.2.1",
    "@rollup/plugin-commonjs": "^22.0.0",
    "@rollup/plugin-json": "4.1.0",
    "@rollup/plugin-node-resolve": "13.2.1",
    "@rollup/plugin-typescript": "8.3.2",
    "@textlint-rule/textlint-rule-no-unmatched-pair": "1.0.8",
    "@types/inquirer": "8.2.1",
    "@types/jest": "27.4.1",
    "@types/node": "17.0.27",
    "@types/semver": "7.3.9",
    "@typescript-eslint/eslint-plugin": "5.21.0",
    "@typescript-eslint/parser": "5.21.0",
    "@vue/eslint-config-typescript": "10.0.0",
    "babel-jest": "27.5.1",
    "commitizen": "4.2.4",
    "concurrently": "7.1.0",
    "conventional-changelog-cli": "2.2.2",
    "cpx2": "4.2.0",
    "cross-env": "7.0.3",
    "cz-conventional-changelog": "3.3.0",
    "eslint": "8.14.0",
    "eslint-config-prettier": "8.5.0",
    "eslint-plugin-prettier": "4.0.0",
    "eslint-plugin-vue": "8.7.1",
    "husky": "7.0.4",
    "inquirer": "8.2.2",
    "jest": "27.5.1",
    "lint-staged": "12.4.0",
    "markdownlint-cli": "0.31.1",
    "npm-check-updates": "12.5.9",
    "postcss": "8.4.12",
    "postcss-loader": "6.2.1",
    "prettier": "2.6.2",
    "remark-cli": "10.0.1",
    "remark-footnotes": "4.0.1",
    "remark-frontmatter": "4.0.1",
    "remark-gfm": "3.0.1",
    "remark-lint": "9.1.1",
    "remark-math": "5.1.1",
    "remark-preset-lint-consistent": "5.1.1",
    "remark-preset-lint-markdown-style-guide": "5.1.2",
    "remark-preset-lint-recommended": "6.1.2",
    "rollup": "2.70.2",
    "rollup-plugin-copy": "3.4.0",
    "rollup-plugin-dts": "4.2.1",
    "rollup-plugin-styles": "4.0.0",
    "rollup-plugin-terser": "7.0.2",
    "rollup-plugin-typescript2": "0.31.2",
    "rollup-plugin-vue": "6.0.0",
    "semver": "7.3.7",
    "sort-package-json": "1.55.0",
    "stylelint": "14.7.1",
    "stylelint-config-prettier": "9.0.3",
    "stylelint-config-standard": "25.0.0",
    "stylelint-config-standard-scss": "3.0.0",
    "stylelint-order": "5.0.0",
    "textlint": "12.1.1",
    "textlint-filter-rule-allowlist": "4.0.0",
    "textlint-filter-rule-comments": "1.2.2",
    "textlint-rule-apostrophe": "2.0.0",
    "textlint-rule-common-misspellings": "1.0.1",
    "textlint-rule-en-capitalization": "2.0.3",
    "textlint-rule-stop-words": "2.0.9",
    "textlint-rule-terminology": "2.1.5",
    "textlint-rule-write-good": "2.0.0",
    "textlint-rule-zh-half-and-full-width-bracket": "1.1.0",
    "ts-jest": "27.1.4",
    "ts-node": "10.7.0",
    "tslib": "2.4.0",
    "typescript": "4.6.3",
    "vuepress-vite": "2.0.0-beta.41",
    "vuepress-webpack": "2.0.0-beta.41"
  },
  "engines": {
    "node": ">=14",
    "pnpm": ">=6"
  },
  "pnpm": {
    "peerDependencyRules": {
      "ignoreMissing": [
        "@algolia/client-search",
        "eslint-plugin-import",
        "eslint-plugin-n",
        "eslint-plugin-promise",
        "postcss",
        "react",
        "react-dom",
        "webpack"
      ]
    }
  },
  "textlint": {
    "rules": {
      "@textlint-rule/no-unmatched-pair": true,
      "apostrophe": true,
      "common-misspellings": true,
      "en-capitalization": {
        "allowHeading": false,
        "allowLists": false,
        "severity": "warning"
      },
      "stop-words": {
        "severity": "warning"
      },
      "terminology": {
        "terms": [
          "Stylus",
          "VuePress",
          [
            "front[- ]matter",
            "front matter"
          ]
        ],
        "exclude": [
          "Node(?:js)?",
          "URL['â€™]?s",
          "repo\\b"
        ],
        "severity": "warning"
      },
      "write-good": {
        "passive": false,
        "severity": "warning",
        "whitelist": [
          "daily",
          "only",
          "multiple",
          "validate"
        ]
      },
      "zh-half-and-full-width-bracket": {
        "bracket": "halfWidth"
      }
    },
    "filters": {
      "allowlist": {
        "allow": [
          "/\\$\\$[\\s\\S]*?\\$\\$/m"
        ]
      },
      "comments": true
    }
  }
}
