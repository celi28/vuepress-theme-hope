  },
  "repository": {
    "type": "git",
    "url": "git+ssh://git@github.com/vuepress-theme-hope/vuepress-theme-hope.git",
    "directory": "packages/shared"
  },
  "license": "MIT",
  "author": {
    "name": "Mr.Hope",
    "email": "mister-hope@outlook.com",
